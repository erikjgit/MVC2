@{
}
@model MVC2.Models.ViewModel.LanguageViewModel

<form asp-action="Index" method="post">
    <label asp-for="Name">Name</label>
    <input asp-for="Name" />
    <button type="submit">Create new language</button>
</form>


<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Id</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LanguageList)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Id</td>
            </tr>

        }
    </tbody>
</table>