@{
}
@model MVC2.Models.ViewModel.CityViewModel

<form asp-action="Create">
    <label asp-for="Name">Name</label>
    <input asp-for="Name" />
    <label asp-for="CountryId">Country</label>
    <select asp-for="CountryId">
        @foreach (var item in Model.Countries)
            {
                <option value="@item.Id">@item.Name</option>
            }
    </select>
    <button type="submit">Create new City</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Country</th>
            <th>Id</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cities)
        {
        <tr>
            <th>@item.Name</th>
            <th>@item.Country.Name</th>
            <th>@item.Id</th>
        </tr>

        }
    </tbody>
</table>