@model MVC2.Models.ViewModel.EditPersonViewModel

<h2>@Model.Person.Name</h2>
<h3>Current languages:</h3>
<form asp-action="RemoveLanguage">
    <input type="hidden" asp-for="PersonId" value="@Model.PersonId" />
    <select asp-for="RemoveId">
        @foreach (var item in Model.Person.PersonLanguages)
        {
            <option value="@item.LanguageId">@item.Language.Name</option>
        }
    </select>
    <button type="submit">Remove Language</button>
</form>
<h3>Add new languages to this person</h3>
<form asp-action="AddLanguage">
    <input type="hidden" asp-for="PersonId" value="@Model.PersonId" />
    <select asp-for="AddId">
        @foreach (var item in Model.NotSpokenLaguages)
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
    <button type="submit">Add Language</button>
</form>
