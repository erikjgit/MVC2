@{
}
@{
    ViewData["Title"] = "Home Page";
}
@model MVC2.Models.ViewModel.PeopleViewModel


<form asp-action="Create">
    <label asp-for="Name">Name</label>
    <input asp-for="Name" />
    <label asp-for="City">City</label>
    <input asp-for="City" />
    <label asp-for="Phone">Phone nr.</label>
    <input asp-for="Phone" />
    <button type="submit">Create new person</button>
</form>

<form asp-action="Filter">
    <input asp-for="FilterText" />
    <button type="submit">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>City</th>
            <th>Phone nr.</th>
            <th>Id</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PersonList)
        {
            <tr>
                <partial name="_personPartial" model="item" />
            </tr>
            
        }
    </tbody>
</table>