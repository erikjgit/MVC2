@{
}
@{
    ViewData["Title"] = "Home Page";
}
@model MVC2.Models.ViewModel.PeopleViewModel


<form asp-action="Create">
    <label asp-for="Name">Name</label>
    <input asp-for="Name" />
    <select asp-for="CityId">
        @foreach (var item in Model.Cities)
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
    <label asp-for="Phone">Phone nr.</label>
    <input asp-for="Phone" />
    <button type="submit">Create new person</button>
</form>

<form asp-action="Index" method="post">
    <input asp-for="FilterText" />
    <button type="submit">Search</button>
</form>
<form asp-action="Index" method="get">
    <button type="submit">Reset</button>
</form>

<partial name="_peopleListPartialView" model="@Model.PersonList" />

